JWT_REFRESH_EXPIRATION=604800000    # 7 days (ms)

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
# Ensure this matches your Google Cloud Console redirect URI
GOOGLE_REDIRECT_URI=https://auth.jiobserver.cloud/api/auth/google/callback
