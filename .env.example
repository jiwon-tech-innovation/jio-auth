# Server Configuration
SERVER_PORT=8080

# Database (PostgreSQL)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=jiaa_auth
POSTGRES_USER=jiaa
POSTGRES_PASSWORD=jiaa1234

# JWT Configuration
# MUST be at least 256 bits (32 characters)
JWT_SECRET=jiaa-super-secret-key-for-jwt-token-generation-must-be-at-least-256-bits-long
